{
    "compilerOptions": {
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "public/dist",
        "paths": {
            "@app/*": [
                "./src/app/*"
            ],
            "@common/*": [
                "./src/common/*"
            ],
            "@lang/*": [
                "./src/lang/*"
            ],
            "@lib/*": [
                "./src/lib/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": [
        "public/assets",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
