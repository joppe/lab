{
    "compilerOptions": {
        "baseUrl": "./",
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "public/dist",
        "paths": {
            "app/*": [
                "./src/app/*"
            ],
            "lib/*": [
                "./src/lib/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": [
        "public/assets",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
